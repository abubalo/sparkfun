{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["./config/*"],
      "@utils/*": ["./utils/*"],
      "@type/*": ["types.d.ts"],
    }
  },

  "include": ["src", "package.json"],
  "exclude": ["node_modules/", "./build", "./*/**.test"]
}
